<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="fontStyle">
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/gunmetal</item>
    </style>

    <style name="buttonStyle">
        <item name="android:backgroundTint">@color/indianRed</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/floralWhite</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="toggleButtonStyle" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>